// select样式
.ivu-select-selection {
  background-color: @input-bg;
}

.ivu-select-single .ivu-select-selection .ivu-select-placeholder,
.ivu-select-single .ivu-select-selection .ivu-select-selected-value {
  border-radius: 4px;
}

.ivu-select-dropdown {
  background-color: @input-bg;
  border: @primary-color 1px solid;
}

.ivu-select-item:hover {
  background: @date-picker-cell-hover-bg
}

.ivu-select-selected-value {
  background-color: @input-bg;
}

.ivu-select-disabled .ivu-select-selected-value {
  background-color: transparent;
}

.vehicle {
  .ivu-select-multiple {
    .ivu-select-selection {
      height: 32px;
      overflow: hidden;
    }
  }
}

.ivu-select-multiple {
  .ivu-select-selection {
    z-index: 9;
  }
  .ivu-select-item-selected {
    background: @selected-bgcolor;
    color: @text-color;
    &:hover {
      background: @selected-bgcolor;
      color: @text-color;
    }
  }
}

// collapse 样式
.ivu-collapse {
  border: none;
}

.ivu-collapse-content {
  background-color: @background-color-base;
}

.ivu-collapse>.ivu-collapse-item>.ivu-collapse-header {
  color: @text-color;
}

//input perpend ,append
.ivu-form-item-error .ivu-input-group-append {
  background: @bs-btn-bgcolor-base;
}

.ivu-input-group-prepend,
.ivu-input-group-append {
  background: @bs-btn-bgcolor-base;
}

.ivu-input-number-input {
  background: @input-bg;
  color: @text-color;
}

.ivu-input-number-handler-wrap {
  background: @primary-color;
}

.ivu-input-number-handler:hover .ivu-input-number-handler-up-inner,
.ivu-input-number-handler:hover .ivu-input-number-handler-down-inner {
  color: @text-color;
}

.ivu-input-number-handler-up-inner,
.ivu-input-number-handler-down-inner {
  color: @bs-icon-close-color;
  &:hover {
    color: @text-color;
  }
}

.ivu-input-icon {
  color: @text-color;
}

.ivu-select-arrow {
  color: @text-color;
}

// Tabs
.ivu-tabs {
  background: @background-color-base;
  &-bar {
    background: @bs-title-color-base;
    border-bottom: none;
  }
  &-nav &-tab {
    padding: 10px 16px;
    margin-right: 0px;
    border-right: 1px solid #101B2F;
    min-width: 80px;
    text-align: center;
    color: @input-disabled-bg;
  }
  &-nav &-tab-active {
    background: @bs-bgcolor-base;
    color: @text-color;
  }
  &-ink-bar {
    height: 0px;
  }
} // tabs type=card
.ivu-tabs.ivu-tabs-card {
  .ivu-tabs-bar {
    background: @bs-title-color-base;
    .ivu-tabs-tab {
      background: @bs-title-color-base;
      &-active {
        margin-left: 1px;
      }
    }
    .ivu-tabs-tab-active {
      background: @bs-bgcolor-base;
    }
  }
}

// notice样式
.ivu-notice {
  right: 20px;
  &-notice {
    background: @bs-notice-bgcolor;
    border-radius: 0px;
    &-close i {
      color: @bs-icon-close-color;
    }
    &-close:hover i {
      color: @text-color;
    }
  }
  &-title {
    color: @text-color;
  }
}

// Message
.ivu-message-notice-content {
  background: @bs-bgcolor-base;
  border: 1px solid @bs-notice-border-color;
}

// timePicker & datePicker
.ivu-date-picker {
  .ivu-select-dropdown {
    background: @background-color-base;
  }
}

span.ivu-date-picker-cells-cell-disabled,
span.ivu-date-picker-cells-cell-disabled:hover {
  cursor: not-allowed;
  background: @bs-date-disabled-color;
  &:before {
    background: @bs-date-disabled-color;
  }
  em {
    background: @bs-date-disabled-color;
    color: @text-color;
    &:hover {
      background: @bs-date-disabled-color;
    }
  }
}

span.ivu-date-picker-cells-cell-disabled.ivu-date-picker-cells-cell-selected em {
  background: @bs-date-disabled-color;
}

.ivu-time-picker-cells-cell:hover {
  background: @select-hover-bgcolor;
}

span.ivu-date-picker-cells-cell-disabled,
span.ivu-date-picker-cells-cell-disabled:hover .ivu-time-picker-cells-cell {
  color: @text-color;
}

.ivu-time-picker-cells-cell.ivu-time-picker-cells-cell-selected,
.ivu-time-picker-cells-cell-selected:hover {
  background: @selected-bgcolor;
  color: @text-color;
}

.dev-scope .ivu-select-single .ivu-select-selection .ivu-select-placeholder {
  color: @text-color;
}

.search-box .ivu-input {
  margin-right: 1px;
}

// 系统设置 设备配置样式
.equipment,
.resource {
  .ivu-btn>.ivu-icon {
    font-size: 14px;
  }
}

.content,
#car-detail {
  padding: 20px;
  .section {
    width: 50%;
    padding: 0 10px;
    float: left;
    position: relative;
    &.split {
      &:after {
        content: '';
        height: 30px;
        position: absolute;
        width: 1px;
        background: #6D788B;
        right: 10px;
        top: 40%;
      }
    }
    .count span {
      display: inline-block;
      overflow: hidden;
      font-size: 18px;
      height: 36px;
      line-height: 36px;
      color: #469AFA;
      padding-right: 10px;
    }
    .count .dif {
      color: #EF9558;
    }
    .stress {
      color: #0092C9;
    }
  }
}

.main-page-bg {
  background: @background-color-base;
}

.ivu-menu-dark.ivu-menu-vertical .ivu-menu-item-group-title,
.ivu-tabs-nav .ivu-tabs-tab {
  color: #fff;
}

.ivu-tabs-nav .ivu-tabs-tab {
  color: #8597ad;
  border-right: 0;
  border-top: 2px solid #0f2343;
  &.ivu-tabs-tab-active {
    color: #fff;
  }
}

.mapPositionLeft {
  .ivu-tabs-nav {
    width: 100%;
    .ivu-tabs-tab {
      width: 50%;
    }
  }
}

// 地图模块样式 修改
