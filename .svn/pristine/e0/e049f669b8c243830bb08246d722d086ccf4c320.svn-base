@import './index.less';
// 导航样式
.ivu-menu-dark.ivu-menu-vertical {
  .ivu-menu-item-group-title {
    background: @bs-title-color-base;
    padding-left: 10px; // text-align: center
  }
  .ivu-menu-item {
    padding: 9px 20px;
    background: @background-color-base;
    border-bottom: 1px solid rgba(58, 90, 139, 0.4);
    transition: inherit !important;
    // box-shadow: 0px -1px 2px #142441 inset;
    &:hover {
      background: @menu-hover-bgcolor;
      color: @text-color;
    }
  }
  .ivu-menu-submenu-title {
    &:hover {
      background: @background-color-base;
      color: @text-color;
    }
  }
}

// 表格样式
.passList {
  .ivu-table-header,
  .ivu-table-body {
    table {
      width: 100%;
    }
  }
}

.ivu-table td {
  background: @bs-bgcolor-base;
}

.ivu-table {
  &::after,
  &::before {
    content: none;
  }
  &-wrapper {
    border: none;
  }
  background: @background-color-base;
  .ivu-table-row-highlight {
    td {
      background: @table-td-highlight-bg;
      color: @text-color;
    }
  }
}

.ivu-table-tip table td {
  border: none !important;
}

// 表格筛选样式
.ivu-poptip-inner {
  background: @bs-bgcolor-base;
  border: 1px solid @bs-border-color-base;
  .ivu-table-filter-select-item:hover {
    background: @bs-hover-color-base;
  }
}

.ivu-table-filter i {
  color: @text-color;
  transition: color @transition-time @ease-in-out;
  &:hover {
    color: @primary-color;
  }
  &.on {
    color: @primary-color;
  }
}

// 分页样式
.ivu-page-prev,
.ivu-page-next {
  background: @bs-page-bgcolor;
}
.ivu-page-options-sizer{
  .ivu-select{
    position: relative;
  }
}
.ivu-page {
  &-item {
    background: @bs-btn-bgcolor-base;
    &:hover {
      background: transparent;
    }
    &-active {
      background: @bs-bgcolor-base;
      a {
        color: @primary-color;
      }
    }
  }
  &-prev,
  &-next,
  &-item-jump-prev,
  &-item-jump-next {
    background: @bs-btn-bgcolor-base;
    a {
      color: @text-color;
    }
  }
  &-disabled {
    a {
      color: @bs-page-disabled-color;
    }
    &:hover {
      border-color: @border-color-base;
      a {
        color: @bs-page-disabled-color;
        cursor: @cursor-disabled;
      }
    }
  }
  &-options-sizer {
    .ivu-select-dropdown-list {
      .ivu-select-item {
        padding: 7px 0;
      }
    }
  }
}

// 弹出框样式
.ivu-modal-close .ivu-icon-ios-close-empty {
  color: #ccc;
  &:hover {
    color: @text-color;
  }
}

.ivu-modal {
  &-mask {
    z-index: 99999999999;
    background: #000813;
    opacity: 0.7;
  }
  &-wrap {
    z-index: 999999999999;
  }
  &-content {
    border-radius: 8px;
    background-color: @bs-bgcolor-base;
  }
  &-header {
    height: 38px;
    padding: 10px 24px;
    border-radius: 8px 8px 0 0;
    background-color: @bs-title-color-base;
    &-inner {
      color: @text-color;
    }
  }
  &-close {
    right: 24px;
    top: 4px;
  }
  &-body {
    padding: 24px 40px;
  }
  &-footer {
    padding: 24px;
    padding-top: 16px;
    .ivu-btn-text {
      background: @bs-btn-bgcolor-base;
      &:hover {
        border-color: @primary-color;
      }
    }
  }
  &-confirm {
    &-head-title {
      color: @text-color;
    }
    &-footer {
      .ivu-btn-text {
        background: @bs-btn-bgcolor-base;
        &:hover {
          border-color: @primary-color;
        }
      }
    }
  }
}

.ivu-form-item-required .ivu-form-item-label:after {
  content: '*';
  display: inline-block;
  margin-left: 4px;
  line-height: 1;
  font-family: SimSun;
  font-size: 12px;
  color: #ed3f14;
}

.ivu-form-item-required .ivu-form-item-label:before {
  content: '';
  margin: 0px;
}

.modal-footer {
  display: flex;
  flex-direction: row-reverse;
  button {
    margin-left: 10px;
    width: 100px;
  }
}

// 按钮样式
.ivu-btn,
.ivu-btn-ghost,
.ivu-btn-primary,
.bs-btn,
.bs-btn-sub {
  &[disabled],
  &[disabled]:hover {
    background: @bs-btn-disabled-color;
    color: @bs-disabled-color;
  }
  &:hover,
  &:active {
    background: @bs-btn-disabled-color;
    color: @bs-disabled-color;
  }
}

.ivu-btn-group .ivu-btn {
  border: 1px solid #5676a9;
}

.ivu-btn,
.bs-btn-sub,
.ivu-btn-ghost {
  border: none;
  background: @bs-btn-bgcolor-base;
  &:hover {
    background: @bs-btn-bgcolor-hover-base;
    color: @bs-ghost-hover-color;
  }
  &:active {
    background-color: @bs-btn-bgcolor-active-base;
  }
}

.ivu-btn-primary,
.bs-btn {
  background: @bs-btn-primary-color;
  &:hover {
    background-color: @bs-btn-primary-hover-color;
  }
  &:active {
    background-color: @bs-btn-primary-active-color;
  }
}

.ivu-dropdown-item-disabled:hover {
  background: #5d5d5d;
}

