<div id="duty-shift">
  <div ref="mainContent" class="main-content">
    <div class="toolbar">
      <div class="left-bar">
        <Input class="iview-input" v-model="searchName" placeholder="请输入用户名" style="width: 200px"> </Input>
        <!-- <DatePicker class="iview-input" type="daterange" confirm v-model="dateRange" placeholder="请选择时间" @on-change="getDateRange" style="width: 200px"></DatePicker> -->
        <DatePicker class="iview-input" type="datetimerange" @on-change="getDateRange" v-model="dateRange" placeholder="请选择时间" style="width: 300px"></DatePicker>
        <Button @click="confirmSearch">检索</Button>
      </div>
    </div>
    <div class="table-container" ref="tableContainer">
      <Table v-if="tableWidth && tableHeight" :columns="columns" :width="tableWidth" :height="tableHeight" :data="data"></Table>
    </div>
    <div class="paging-container">
      <Page :total="page.total" :page-size="page.pageSize" :current="page.current" :page-size-opts="$PageInfo.size" @on-page-size-change="handlePageSizeChange" @on-change="handlePageChange" show-total show-sizer show-elevator></Page>
    </div>
  </div>
  <Modal v-model="Modal" title="交接班详情">
    <Form ref="formItem" :model="formItem" :label-width="110">
        <FormItem label='交接人：'>
            {{formItem.heir}}
        </FormItem>
        <FormItem label='接班人：'>
            {{formItem.successor}}
        </FormItem>
        <FormItem label='交接时间：'>
            {{formItem.time}}
        </FormItem>
        <FormItem label='当班时间段：'>
            {{formItem.date}}
        </FormItem>
        <FormItem label='备注：'>
            {{formItem.remark}}
        </FormItem>
    </Form>
    <div slot="footer">
        <Button @click="detailsConfirm">确定</Button>
    </div>
</Modal>
</div>
